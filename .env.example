# Source and backup directories
SOURCE_DIR="/path/to/source/"
BACKUP_DIR="/path/to/backups/"

# Linode bucket details
BUCKET_NAME="your-bucket-name"
REGION="your-region"
ENDPOINT="https://your-region.linodeobjects.com"

# AWS/Linode Object Storage credentials
AWS_ACCESS_KEY_ID="your_access_key_here"
AWS_SECRET_ACCESS_KEY="your_secret_key_here"

# Backup retention period (in days)
RETENTION_DAYS=7

# Exclude patterns for zip
EXCLUDE_PATTERNS=(
    '*/path/to/exclude1/*'
    '*/path/to/exclude2/*'
)

# Path to BackupDockerCompose.sh
BACKUP_PRE_SCRIPT="/path/to/BackupDockerCompose.sh"